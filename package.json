{
	"name": "luther",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"typecheck": "tsc --noEmit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest -- --verbose",
		"test": "npm run test:unit -- --run",
		"migrate": "tsx dev/scripts/migrate.ts",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:debug": "playwright test --debug",
		"e2e:report": "playwright show-report",
		"e2e:arch": "./e2e/scripts/e2e-arch.sh",
		"e2e:arch:setup": "sudo docker run -p 3000:3000 --rm --init -it mcr.microsoft.com/playwright:v1.57.0-jammy /bin/sh -c 'cd /home/pwuser && npx -y playwright@1.57.0 run-server --port 3000 --host 0.0.0.0'",
		"e2e:arch:test": "PW_TEST_CONNECT_WS_ENDPOINT=ws://127.0.0.1:3000/ npx playwright test",
		"hurl:single": "hurl ./dev/examples/hurl/js.hurl",
		"hurl:mult": "hurl ./dev/examples/hurl/mult.hurl"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"npm run lint",
			"npm run format"
		]
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.15",
		"better-sqlite3": "^12.5.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"dompurify": "^3.3.1",
		"highlight.js": "^11.11.1",
		"zod": "^4.2.1"
	}
}
